doctype html
html
  head
    title metapp
    meta(
      name='viewport' 
      content='width=device-width, minimum-scale=1.0, initial-scale=1.0, user-scalable=yes'
    )
    link(rel='stylesheet' href='/css/main.css')
    link(
      rel="icon" 
      href="/favicon.ico"
    )

  body
    header.main
      block header
        a.light(href='./')
          img.logo.metalab(src='/img/metalab-logo-black.png')
          img.logo.metapp(src='/img/metapp-logo-black.png')
        a.dark(href='./')
          img.logo.metalab(src='/img/metalab-logo-white.png')
          img.logo.metapp(src='/img/metapp-logo-white.png')

      a#update.update.i.i-lightbulb
      a.config.i.i-cogs(data-href='options')

    main
      div.main
        block main

    footer.main
      block footer
        div 
          | made with 
          span.love.i-heart-empty
          |  
          span.tmi
            | by folks 
          | in the 
          a(href='https://metalab.at') metalab.at

    script(src='/js/main.js')
